<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true">
    <testsuites>
        <testsuite name="Laminas MVC Skeleton Test Suite">
            <directory>./module/Application/test</directory>
        </testsuite>
        <testsuite name="Auth">
            <directory>./module/Auth/test</directory>
        </testsuite>
        <testsuite name="ApplicationUnit">
            <directory>./module/Application/test/Unit/Service</directory>
        </testsuite>
        <testsuite name="AuthUnit">
            <directory>./module/Auth/test/Unit/Service</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./module/*/src</directory>
        </whitelist>
    </filter>
</phpunit>
